{{!< default}}

<div class="container">
	{{#if races.length}}
		<p class="mb-3">If you were backing the SP favourite at ¬£{{races.stake}} to win each race, your balance would be <strong>¬£{{races.profit}}</strong></p>

		{{#if user}}<p class="clearfix"><a href="/keystone/races" class="btn btn-success btn-sm float-right">Edit Races</a></p>{{/if}}

		<table class="table table-striped table-hover table-sm">
			<thead>
				<tr>
					<th>#</th>
					<th>Race Date</th>
					<th>Course</th>
					<th>Race Time</th>
					<th>Horse</th>
					<th>Odds</th>
					<th>Result</th>
					<th>Returns</th>
				</tr>
			</thead>
			<tbody>
				{{#each races}}
					<tr>
						<th scope="row">{{increment @index}}</th>
						<td>{{this.date}}</td>
						<td>{{this.course}}</td>
						<td>{{this.raceTime}}</td>
						<td>{{this.horse}}</td>
						<td>{{this.odds}}</td>
						<td {{#if this.won}}class="text-success"{{else if this.placed}}class="text-info"{{/if}}>{{this.result}}</td>
						<td>{{this.returns}}</td>
					</tr>
				{{/each}}
			</tbody>
		</table>
	{{else}}
		{{#if user}}<p><a class="btn btn-md btn-success" href='/keystone'>Add a race</a></p>{{/if}}
		<div class="alert alert-info">Whoa there horsie, there ain't no races! {{#if user}}What are you waiting for? Giddy-up!{{/if}} üêé</div>
	{{/if}}
	{{#if races.results.length}}
		{{#if races.results.totalPages}}
			<div class="lead text-muted">
				Showing <strong>{{races.first}}</strong> 
				to <strong>{{races.last}}</strong>
				of <strong>{{races.total}}</strong>
				races
			</div>
		{{else}}
			{{!-- <div class="lead text-muted">Showing {{utils.plural(races.results.length, '* race')}}</div> --}}
			<div class="blog">
				{{#each races.results}}
					<div class="test">
						{{this.author.name.full}}
					</div>
				{{/each}}
			</div>
		{{/if}}
	{{/if}}
</div>
